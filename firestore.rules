
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // Rules for the 'users' collection
    match /users/{userId} {
      // Anyone can create their own user profile document.
      // The document ID must match the UID of the user creating it.
      allow create: if isOwner(userId);
      
      // Only the owner of the document can update or delete it.
      // Any signed-in user can read any profile (for leaderboards).
      allow read, update, delete: if isOwner(userId);
      
      // Any signed-in user can list all users (for leaderboards).
      allow list: if isSignedIn();
    }

    // Allow any authenticated user to list all grievances.
    // This is required for the main map view.
    match /grievances {
      allow list: if isSignedIn();
    }
    
    // Rules for individual grievance documents.
    match /grievances/{grievanceId} {
      // Any authenticated user can read individual grievance documents.
      allow get: if isSignedIn();

      // An authenticated user can create a new grievance.
      // The `userId` in the new document must match the creator's UID.
      allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;

      // Only the user who created the grievance OR an admin can update or delete it.
      // We will assume an `isAdmin` custom claim for admins for this rule.
      allow update, delete: if isSignedIn() && (resource.data.userId == request.auth.uid || request.auth.token.isAdmin == true);
    }
  }
}
