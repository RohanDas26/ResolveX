
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Admins can list all users.
    // Authenticated users can read their own profile.
    match /users/{userId} {
      allow read: if request.auth != null && (request.auth.uid == userId || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true);
      // Allow admins to list users.
      allow list: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
      // Users can update their own profile. Only specific fields can be updated.
      // Admins can update any profile.
      allow update: if request.auth != null && 
                      (request.auth.uid == userId && request.resource.data.diff(resource.data).affectedKeys().hasOnly(['name', 'imageUrl'])) || 
                      get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
      // User creation is handled in the signup process.
      allow create: if request.auth != null;
    }

    // ANYONE can read all grievances for map display.
    match /grievances/{grievanceId} {
        allow read: if true;
        // Only authenticated users can create grievances and must own them.
        allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
        // Only admins can update the status of a grievance.
        allow update: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
        // No one can delete a grievance for now.
        allow delete: if false;
    }
    
    // OTPs can be created by a trusted backend (Cloud Function).
    // They are not directly accessible by clients.
    match /signupOtps/{docId} {
        allow read, write: if false; 
    }
  }
}
