
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Grievances collection
    match /grievances/{id} {
      // Anyone can read grievances (for maps, navigator, analytics)
      allow get, list: if request.auth != null;

      // Only authenticated users can create/update their own grievances
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;

      // Allow updates only from the original reporter
      allow update: if request.auth != null
                    && resource.data.userId == request.auth.uid;

      // (Optional) no deletes from client
      allow delete: if false;
    }

    // Users collection
    match /users/{uid} {
      // Users can read their own profile, admin pages can read all
      allow get: if request.auth != null && request.auth.uid == uid;
      // You can open list for dashboards, or keep it admin-only if you add custom claims later
      allow list: if request.auth != null;

      // User can create/update only their own profile
      allow create, update: if request.auth != null && request.auth.uid == uid;
      allow delete: if false;
    }
  }
}
