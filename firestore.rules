
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // Rules for the 'users' collection
    match /users/{userId} {
      // Anyone can create their own user profile document.
      allow create: if isOwner(userId);
      
      // Only the owner of the document can read, update or delete it.
      allow read, update, delete: if isOwner(userId);
      
      // Any signed-in user can list all users.
      allow list: if isSignedIn();
    }
    
    // Rules for the 'grievances' collection
    match /grievances/{grievanceId} {
      // Any authenticated user can read the collection or individual documents.
      allow read: if isSignedIn();

      // An authenticated user can create a new grievance if the userId matches their own.
      allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;

      // Only the user who created the grievance can update or delete it.
      // The isAdmin check has been removed to simplify and fix permission errors.
      allow update, delete: if isSignedIn() && resource.data.userId == request.auth.uid;
    }
  }
}
