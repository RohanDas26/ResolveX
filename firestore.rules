rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Users can read their own profile, and admins can read any profile.
    match /users/{userId} {
      allow read: if request.auth != null && (request.auth.uid == userId || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true);
      // Users can update their own profile. Only specific fields can be updated by the user.
      // Admins can update any profile.
      allow update: if request.auth != null && 
                      (request.auth.uid == userId && request.resource.data.diff(resource.data).affectedKeys().hasOnly(['name', 'imageUrl'])) || 
                      get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
      // User creation is handled in the signup process
      allow create: if request.auth != null;
    }

    // Authenticated users can read all grievances for map display.
    // Users can read grievances they own.
    // Admins can read all grievances.
    match /grievances/{grievanceId} {
        allow read: if request.auth != null;
        // Only authenticated users can create grievances
        allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
        // Only admins can update the status of a grievance.
        allow update: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
        // No one can delete a grievance for now.
        allow delete: if false;
    }
    
    // OTPs can be created by anyone (via cloud function)
    // They can only be read/deleted by the cloud function (not enforced here, but in function logic)
    match /signupOtps/{docId} {
        allow read, write: if true; // To be called by a trusted backend (Cloud Function)
    }
  }
}
